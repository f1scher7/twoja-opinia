<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="360.0" prefWidth="534.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twojaOpinia.controller.AdminController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin Dashboard" />

            <HBox alignment="CENTER" spacing="10">
                <Label text="Username:" />
                <TextField fx:id="userNameField" promptText="Enter username" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Password:" />
                <TextField fx:id="userPasswordField" promptText="Enter password" />
            </HBox>
            
            <HBox alignment="CENTER" spacing="10">
            	<Button fx:id="createSurveyButton" onAction="#handleCreateUser" text="Create User" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
