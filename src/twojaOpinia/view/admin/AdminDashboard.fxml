<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twojaOpinia.controller.AdminController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Admin Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Username:"/>
                <TextField fx:id="userNameField" promptText="Enter username"/>
                <Button fx:id="createUserButton" text="Create User" onAction="#handleCreateUser"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Survey Name:"/>
                <TextField fx:id="surveyNameField" promptText="Enter survey name"/>
                <Button fx:id="createSurveyButton" text="Create Survey" onAction="#handleCreateSurvey"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>